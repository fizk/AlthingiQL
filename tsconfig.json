{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDirs": ["./src"],
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl" :  "./",
        "paths": {

        },
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "types": [
        "typePatches"
    ]
}
