{
  "name": "AlthingiQL",
  "version": "1.0.0",
  "description": "GraphQL server and React/Apollo client",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "$(npm bin)/forever start ./dist/server/index.js",
    "stop": "$(npm bin)/forever stop ./dist/server/index.js",
    "dev": "npm run server:dev & npm run webpack:watch & watch",
    "server:dev": "nodemon --exec $(npm bin)/babel-node --plugins=remove-style-imports,replace-env-vars --presets=es2015,react,stage-2 -- ./src/server/index.js",
    "server:prod": "npm run build && npm start",
    "webpack": "$(npm bin)/webpack -p",
    "webpack:watch": "$(npm bin)/webpack --watch",
    "build:server": "$(npm bin)/babel --plugins=remove-style-imports,replace-env-vars --presets=es2015,react,stage-2 -d ./dist ./src",
    "build:client": "npm run webpack",
    "build": "SERVER_PROTOCOL=https SERVER_HOST=loggjafarthing.einarvalur.co PORT=443 npm run build:server && npm run build:client",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "lint:js": "$(npm bin)/eslint ./src/**/*.js",
    "lint:scss": "$(npm bin)/stylelint ./src/client/**/*.scss"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fizk/AlthingiQL"
  },
  "dependencies": {
    "apollo-client": "^1.9.3",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-remove-style-imports": "git+https://github.com/fizk/babel-plugin-remove-style-imports.git",
    "babel-plugin-replace-env-vars": "git+https://github.com/fizk/babel-plugin-replace-env-vars.git",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "^4.0.0",
    "d3-scale": "^1.0.7",
    "d3-shape": "^1.2.0",
    "d3-time": "^1.0.8",
    "debug": "^3.1.0",
    "eslint": "^4.16.0",
    "eslint-plugin-react": "^7.6.1",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "forever": "^0.15.3",
    "graphql": "^0.11.7",
    "graphql-iso-date": "^3.3.0",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-apollo": "^1.4.16",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-markdown": "^2.5.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.11",
    "babel-eslint": "^8.2.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^22.1.4",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "stylelint-scss": "^2.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
    }
  }
}
