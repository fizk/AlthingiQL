{
  "name": "AlthingiQL",
  "version": "1.0.0",
  "description": "GraphQL server and React/Apollo client",
  "main": "index.js",
  "scripts": {
    "test": "$(npm bin)/mocha --require babel-core/register --recursive ./src/**/__test__/**/*.js",
    "start": "$(npm bin)/forever start ./dist/server/index.js",
    "stop": "$(npm bin)/forever stop ./dist/server/index.js",
    "server:dev": "nodemon --exec $(npm bin)/babel-node --presets=es2015,react,stage-2 -- ./src/server/index.js",
    "server:prod": "SERVER_PROTOCOL=https SERVER_HOST=loggjafarthing.einarvalur.co PORT=443 npm run build && npm start",
    "webpack": "$(npm bin)/webpack -p",
    "webpack:watch": "$(npm bin)/webpack --watch",
    "sass": "$(npm bin)/gulp sass",
    "sass:watch": "$(npm bin)/gulp sass:watch",
    "build:server": "./node_modules/.bin/babel --presets=es2015,react,stage-2 -d ./dist ./src",
    "build:client": "npm run sass && npm run webpack",
    "build": "npm run build:server && npm run build:client",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "lint:js": "$(npm bin)/eslint ./src/**/*.js",
    "lint:scss": "$(npm bin)/stylelint ./src/client/**/*.scss"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fizk/AlthingiQL"
  },
  "dependencies": {
    "apollo-client": "^1.9.3",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "^4.0.0-beta",
    "d3-scale": "^1.0.6",
    "d3-shape": "^1.2.0",
    "d3-time": "^1.0.7",
    "debug": "^3.1.0",
    "eslint": "^4.8.0",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.16.1",
    "express-graphql": "^0.6.11",
    "forever": "^0.15.3",
    "graphql": "^0.11.7",
    "graphql-iso-date": "^3.3.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "nodemon": "^1.12.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-apollo": "^1.4.16",
    "react-dom": "^16.0.0",
    "react-markdown": "^2.5.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-module-importer": "^1.4.0",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.15",
    "awesome-typescript-loader": "^3.2.3",
    "babel-eslint": "^8.0.2",
    "mocha": "^4.0.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.2",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "stylelint-scss": "^2.1.0"
  }
}
