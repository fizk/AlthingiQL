{
  "name": "althingi-ql",
  "version": "1.0.0",
  "description": "GraphQL server and a React SPA for Loggjafarthing",
  "repository": "https://github.com/fizk/AlthingiQL",
  "scripts": {
    "test": "jest",
    "test-update": "jest --updateSnapshot",
    "lint": "./node_modules/.bin/eslint './src/client/theme/**/*.{ts,tsx}'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf ./dist",
    "build:server": "./node_modules/.bin/babel --config-file ./.server.babelrc ./src --out-dir ./dist --extensions \".ts,.tsx\"",
    "build:client": "./node_modules/.bin/webpack",
    "watch:client": "npm run build:client -- -w",
    "watch:server": "npm run build:server -- -w",
    "watch:node": "nodemon --watch ./dist ./dist/server/index.js",
    "dev": "npm run watch:server & npm run watch:client & npm run watch:node & wait",
    "storybook": "start-storybook -p 9001 -s ./public -c .storybook",
    "start": "npm run build:server && npm run build:client && ./node_modules/.bin/forever -f ./dist/server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@storybook/addon-notes": "^5.2.5",
    "@types/faker": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.16.0",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0"
  },
  "dependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@storybook/addon-actions": "^5.2.3",
    "@storybook/addon-knobs": "^5.2.3",
    "@storybook/react": "^5.2.3",
    "@types/d3-scale": "^2.1.1",
    "@types/d3-shape": "^1.3.1",
    "@types/d3-time": "^1.0.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.1",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-helmet": "^5.0.11",
    "@types/react-router-dom": "^5.1.0",
    "@types/react-test-renderer": "^16.9.0",
    "@types/storybook__react": "^4.0.2",
    "@types/throttle-debounce": "^2.1.0",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-link-http": "^1.5.16",
    "apollo-link-state": "^0.4.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "bootstrap": "^4.3.1",
    "css-loader": "^3.2.0",
    "d3-scale": "^3.0.0",
    "d3-shape": "^1.3.5",
    "d3-time": "^1.0.11",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "forever": "^1.0.0",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^2.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "react": "^16.10.2",
    "react-apollo": "^3.1.2",
    "react-dom": "^16.10.2",
    "react-helmet": "^5.2.1",
    "react-markdown": "^4.2.2",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.10.2",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "throttle-debounce": "^2.1.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "globalSetup": "<rootDir>/jest/globalSetup.js",
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/jest/cssModules",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/jestAssetsTransformer.js"
    },
    "testMatch": [
      "<rootDir>/src/client/theme/**/__test__/**/*.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      ".mocks.js"
    ]
  }
}
