    "build:client": "./node_modules/.bin/webpack",
    "build:client.prod": "GRAPHQL_SERVER=\"/graphql\" ./node_modules/.bin/webpack -p",
    "clean": "rm -rf ./dist",
    "dev-server": "webpack-dev-server",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "type-check": "tsc --noEmit",
